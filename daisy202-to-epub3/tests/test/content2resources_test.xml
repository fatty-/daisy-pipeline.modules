<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE utfx:tests PUBLIC "-//UTF-X//DTD utfx-tests 1.0//EN" "utfx_tests.dtd">
<utfx:tests xmlns:utfx="http://utfx.org/test-definition" xmlns:epub="http://www.idpf.org/2011/epub"
   xmlns:c="http://www.w3.org/ns/xproc-step" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
   <utfx:stylesheet src="../content2resources.xsl"/>
   <utfx:test>
      <utfx:name>Minimal content document</utfx:name>
      <utfx:assert-equal>
         <utfx:source>
            <html xml:base="http://example.com/navigation.xhtml" xmlns="http://www.w3.org/1999/xhtml" profile="http://www.idpf.org/epub/30/profile/content/">
               <head>
                  <title>HTML document title</title>
               </head>
               <body>
                  <h1 id="title1">Heading 1</h1>
               </body>
            </html>
         </utfx:source>
         <utfx:expected>
            <c:manifest xml:base="http://example.com/"/>
         </utfx:expected>
      </utfx:assert-equal>
   </utfx:test>
   <utfx:test>
      <utfx:name>CSS-stylesheet in &lt;head/&gt;</utfx:name>
      <utfx:assert-equal>
         <utfx:source>
            <html xml:base="http://example.com/navigation.xhtml" xmlns="http://www.w3.org/1999/xhtml" profile="http://www.idpf.org/epub/30/profile/content/">
               <head>
                  <title>HTML document title</title>
                  <link href="stylesheet.css" rel="stylesheet" type="text/css"/>
               </head>
               <body>
                  <h1 id="title1">Heading 1</h1>
               </body>
            </html>
         </utfx:source>
         <utfx:expected>
            <c:manifest xml:base="http://example.com/">
               <c:entry href="stylesheet.css" media-type="text/css"/>
            </c:manifest>
         </utfx:expected>
      </utfx:assert-equal>
   </utfx:test>
   <utfx:test>
      <utfx:name>Two PNG-images</utfx:name>
      <utfx:assert-equal>
         <utfx:source>
            <html xml:base="http://example.com/navigation.xhtml" xmlns="http://www.w3.org/1999/xhtml" profile="http://www.idpf.org/epub/30/profile/content/">
               <head>
                  <title>HTML document title</title>
               </head>
               <body>
                  <h1 id="title1">Heading 1</h1>
                  <img src="image1.png" alt="first image"/>
                  <img src="image2.png" alt="second image"/>
               </body>
            </html>
         </utfx:source>
         <utfx:expected>
            <c:manifest xml:base="http://example.com/">
               <c:entry href="image1.png" media-type="image/png"/>
               <c:entry href="image2.png" media-type="image/png"/>
            </c:manifest>
         </utfx:expected>
      </utfx:assert-equal>
   </utfx:test>
</utfx:tests>
