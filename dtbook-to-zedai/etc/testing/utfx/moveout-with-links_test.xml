<?xml version="1.0" encoding="UTF-8"?>
<?oxygen RNGSchema="utfx_tests.rnc" type="compact"?>
<utfx:tests xmlns:utfx="http://utfx.org/test-definition"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.daisy.org/z3986/2005/dtbook/">

    <utfx:stylesheet src="../../dtbook-to-zedai/moveout-prodnote.xsl"/>

    <!--<xsl:with-param name="valid-parents" select="tokenize('annotation,prodnote,sidebar,div,imggroup,caption,
        li,note,img,blockquote,level,level1,level2,level3,level4,level5,level6,td,th'
    -->
    <utfx:test>
        <utfx:name>Move Out with links</utfx:name>
        <utfx:call-template name="main">
            <utfx:with-param name="document">
                <dtbook>
                    <bodymatter>
                        <level1>
                            <p>
                                <a href="http://www.example.com">
                                    <span>before</span>
                                    <prodnote>Producer note</prodnote>
                                    <span>after</span>
                                </a>
                            </p>
                        </level1>
                    </bodymatter>
                </dtbook>
            </utfx:with-param>
        </utfx:call-template>
        <utfx:assert-equal normalise-internal-whitespace="yes">

            <utfx:source>
                <empty/>
            </utfx:source>


            <utfx:expected>
                <dtbook>
                    <bodymatter>
                        <level1>
                            <p><a href="http://www.example.com"><span>before</span></a></p>
                            <prodnote><a href="http://www.example.com">Producer note</a></prodnote>
                            <p><a href="http://www.example.com"><span>after</span></a></p>
                        </level1>
                    </bodymatter>
                </dtbook>
            </utfx:expected>
        </utfx:assert-equal>
    </utfx:test>
</utfx:tests>
