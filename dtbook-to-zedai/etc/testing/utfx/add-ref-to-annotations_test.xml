<?xml version="1.0" encoding="UTF-8"?>
<?oxygen RNGSchema="utfx_tests.rnc" type="compact"?>
<utfx:tests xmlns:utfx="http://utfx.org/test-definition"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:tmp="http://www.daisy.org/ns/pipeline/tmp"
    xmlns:z="http://www.daisy.org/ns/z3998/authoring/">
    
    <utfx:stylesheet src="../../dtbook-to-zedai/add-ref-to-annotations.xsl"/>
    
    <utfx:test>
        <utfx:name>Floating annotations</utfx:name>
        <utfx:assert-equal normalise-internal-whitespace="yes">
            <utfx:source>
                <z:section xml:id="sec1">
                    <z:annotation>Annotation</z:annotation>
                </z:section>    
            </utfx:source>
            <utfx:expected>
                <z:section xml:id="sec1">
                    <z:annotation ref="sec1">Annotation</z:annotation>
                    <z:annotation role="production">Please review annotations and their targets (@ref). Source document contained one or more annotations with no explicit references.</z:annotation>
                </z:section>
            </utfx:expected>
        </utfx:assert-equal>
    </utfx:test>
    
</utfx:tests>
