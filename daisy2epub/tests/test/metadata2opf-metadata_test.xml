<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE utfx:tests PUBLIC "-//UTF-X//DTD utfx-tests 1.0//EN" "utfx_tests.dtd">
<utfx:tests xmlns:utfx="http://utfx.org/test-definition" xmlns:epub="http://www.idpf.org/2011/epub"
   xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:opf="http://www.idpf.org/2007/opf"
   xmlns:c="http://www.w3.org/ns/xproc-step" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
   <utfx:stylesheet src="../metadata2opf-metadata.xsl"/>
   <utfx:test>
      <utfx:name>Some metadata</utfx:name>
      <utfx:assert-equal>
         <utfx:source>
            <c:metadata>
               <c:meta name="dc:date" content="2011-03-18" scheme="yyyy-mm-dd"/>
               <c:meta name="dc:format" content="Daisy 2.02"/>
               <c:meta name="dc:identifier" content="identifier"/>
               <c:meta name="dc:language" content="EN"/>
               <c:meta name="dc:publisher" content="DAISY Consortium"/>
               <c:meta name="dc:title" content="Title of DTB or Publication"/>
               <c:meta name="ncc:charset" content="UTF-8"/>
               <c:meta name="ncc:pageFront" content="1"/>
               <c:meta name="ncc:pageNormal" content="2"/>
               <c:meta name="ncc:pageSpecial" content="3"/>
               <c:meta name="ncc:tocItems" content="1"/>
               <c:meta name="ncc:totalTime" content="00:00:10" scheme="hh:mm:ss"/>
            </c:metadata>
         </utfx:source>
         <utfx:expected>
            <opf:metadata>
               <dc:identifier id="pub-id">identifier</dc:identifier>
               <dc:title id="title">Title of DTB or Publication</dc:title>
               <dc:language>EN</dc:language>
               <dc:date id="date">2011-03-18</dc:date>
               <meta about="#date" property="scheme">yyyy-mm-dd</meta>
               <meta property="dcterms:modified">{TODO: ignore dynamically created time}</meta>
               <dc:format>ePub3</dc:format>
               <dc:publisher id="meta_5">DAISY Consortium</dc:publisher>
               <meta id="meta_7" property="ncc:charset">UTF-8</meta>
               <meta id="meta_8" property="ncc:pageFront">1</meta>
               <meta id="meta_9" property="ncc:pageNormal">2</meta>
               <meta id="meta_10" property="ncc:pageSpecial">3</meta>
               <meta id="meta_11" property="ncc:tocItems">1</meta>
               <meta id="meta_12" property="ncc:totalTime">00:00:10</meta>
               <meta about="#meta_12" property="scheme">hh:mm:ss</meta>
            </opf:metadata>
         </utfx:expected>
      </utfx:assert-equal>
   </utfx:test>
</utfx:tests>
