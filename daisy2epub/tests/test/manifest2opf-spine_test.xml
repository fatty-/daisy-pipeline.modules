<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE utfx:tests PUBLIC "-//UTF-X//DTD utfx-tests 1.0//EN" "utfx_tests.dtd">
<utfx:tests xmlns:utfx="http://utfx.org/test-definition" xmlns:epub="http://www.idpf.org/2011/epub"
   xmlns:opf="http://www.idpf.org/2007/opf" xmlns:c="http://www.w3.org/ns/xproc-step"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
   <utfx:stylesheet src="../manifest2opf-spine.xsl"/>
   <utfx:test>
      <utfx:name>Simple manifest</utfx:name>
      <utfx:assert-equal>
         <utfx:source>
            <c:manifest>
               <c:entry id="content1" href="content1.xhtml" media-type="application/xhtml+xml"/>
               <c:entry id="content2" href="content2.xhtml" media-type="application/xhtml+xml"/>
               <c:entry id="content3" href="content3.xhtml" media-type="application/xhtml+xml"/>
            </c:manifest>
         </utfx:source>
         <utfx:expected>
            <opf:spine>
               <opf:item id="content1" href="content1.xhtml" media-type="application/xhtml+xml"/>
               <opf:item id="content2" href="content2.xhtml" media-type="application/xhtml+xml"/>
               <opf:item id="content3" href="content3.xhtml" media-type="application/xhtml+xml"/>
            </opf:spine>
         </utfx:expected>
      </utfx:assert-equal>
   </utfx:test>
</utfx:tests>
