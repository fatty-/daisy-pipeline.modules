    <utfx:test>
        <utfx:name>Rename to Span: CITE</utfx:name>
        <utfx:assert-equal normalise-internal-whitespace="yes">
            <!-- cannot test case where cite has no @id, because cannot predict generate-id() output -->
            <utfx:source>
                <abbr><cite id="testid1"/></abbr>
                <acronym><cite id="testid2"/></acronym>
                <dt><cite id="testid3"/></dt>
                <sub><cite id="testid4"/></sub>
                <sup><cite id="testid5"/></sup>
                <w><cite id="testid6"/></w>
                <strong><cite id="testid7"/></strong>
                <abbr>
                    <cite id="testid8">
                        <title/>
                        <author/>
                    </cite>
                </abbr>
            </utfx:source>
            
            <utfx:expected>
                <abbr><span id="testid1"/></abbr>
                <acronym><span id="testid2"/></acronym>
                <dt><span id="testid3"/></dt>
                <sub><span id="testid4"/></sub>
                <sup><span id="testid5"/></sup>
                <w><span id="testid6"/></w>
                <strong><span id="testid7"/></strong>
                <abbr>
                    <span id="testid8">
                        <span property="title"/>
                        <span property="author"/>
                    </span>
                </abbr>     
            </utfx:expected>
        </utfx:assert-equal>
    </utfx:test>
    
    
    <utfx:test>
        <utfx:name>Rename to Span: nested SAMP</utfx:name>
        <utfx:assert-equal normalise-internal-whitespace="yes">
            <!-- cannot test case where cite has no @id, because cannot predict generate-id() output -->
            <utfx:source>
                <samp>
                    <samp/>
                    <samp/>
                    <notsamp/>
                </samp>
            </utfx:source>
            
            <utfx:expected>
                <samp>
                    <span role="example"/>
                    <span role="example"/>
                    <notsamp/>
                </samp>
            </utfx:expected>
        </utfx:assert-equal>
    </utfx:test>
    
    <utfx:test>
        <utfx:name>Rename to Span: copy attributes</utfx:name>
        <utfx:assert-equal normalise-internal-whitespace="yes">
            <!-- cannot test case where cite has no @id, because cannot predict generate-id() output -->
            <utfx:source>
               <lic id="testid" xml:lang="jp" dir="ltr"/>
            </utfx:source>
            
            <utfx:expected>
                <span id="testid" xml:lang="jp" its:dir="ltr"/>
            </utfx:expected>
        </utfx:assert-equal>
    </utfx:test>
    

</utfx:tests>
