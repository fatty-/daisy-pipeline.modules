                <dd>
                    <p/>
                    <address/>
                </dd>
            </utfx:source>

            <utfx:expected>
                <dd>
                    <span/>
                    <span/>
                </dd>
            </utfx:expected>
        </utfx:assert-equal>
    </utfx:test>

