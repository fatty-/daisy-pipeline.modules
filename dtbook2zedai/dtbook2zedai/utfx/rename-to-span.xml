    <utfx:stylesheet src="rename-to-span.xsl"/>

    <utfx:test>
        <utfx:name>Rename to Span: LIC</utfx:name>
        <utfx:assert-equal normalise-internal-whitespace="yes">
            <utfx:source>
                <lic/>
            </utfx:source>

            <utfx:expected>
                <span/>
            </utfx:expected>
        </utfx:assert-equal>
    </utfx:test>

    <utfx:test>
        <utfx:name>Rename to Span: DD/P and DD/ADDRESS</utfx:name>
        <utfx:assert-equal normalise-internal-whitespace="yes">
